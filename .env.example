# --- PostgreSQL ---
POSTGRES_USER=tg_admin
POSTGRES_PASSWORD=super_secret_password
POSTGRES_DB=tg_parser
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=my_secure_redis_password

# --- Grafana ---
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=my_grafana_password

# --- Prometheus ---
PROMETHEUS_USER=admin
PROMETHEUS_PASSWORD=my_prometheus_password
# Хеш пароля для Prometheus (сгенерируем его ниже)
PROMETHEUS_PASSWORD_HASH=... 

# --- App Settings ---
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
BROKER_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

